#include <iostream>
#include <cstring>
#include <vector>

using namespace std;

int main() {
    int n_app, n_evnt;

    cin >> n_app >> n_evnt;

    vector<int> log_noti;
    log_noti.reserve(n_evnt);

    for (int w = 0; w < n_evnt; ++w) {
        int cmd;
        cin >> cmd;

        switch(cmd){
            case 1:{
                int x;
                cin >> x;
                
                log_noti.push_back(x);
                break;
            }
            case 2:{
                int x;
                cin >> x;

                for (int i = 0; i < log_noti.size(); ++i) {
                    if(log_noti[i] == x){
                        log_noti[i] = 0;
                    }
                }
                break;
            }
            case 3:{
                int t;
                cin >> t;

                for(int i = 0; i < t; ++i){
                    log_noti[i] = 0;
                }

                break;
            }
        }

        int sum_noti = 0;
        for (int i = 0; i < log_noti.size(); ++i) {
            if(log_noti[i] != 0){
                ++sum_noti;
            }
        }
        cout << sum_noti << endl;
    }


    return 0;
}
